<link rel="stylesheet" type="text/css" href="./styles/post.css"> {{#post.result}}

<main>
    <!-- Start of Jumbotron  -->
    <div class="jumbotron main-jumbotron-section">
        <hr class="section-separator">

        <h2>"Travel is the only thing you buy that makes you richer"</h2>
        <p class="lead">He who does not travel does not know the value of men.</p>

        <hr class="section-separator section-separator-last">
    </div>
    <!-- End of Jumbotron  -->
    <div class="main-content container">
        <div class="row main-content-comment">
            <div class="col-md-8 col-sm-8 main-content-left">

                <h4 class="article__title">Posted by <strong>{{author}}</strong> on {{date}} in <strong>{{category}}</strong> | {{comments.length}} Comment</h4>
                <article>

                    <img src={{image}} class="pull-left img-responsive  img-thumbnail  ">

                    <p>
                        {{text}}
                    </p>



                </article>

                <div class="row">
                    <div class="col-md-12 main-content-left main-comment ">
                        <h1>{{comments.length}} Comment</h1>
                        {{/post.result}}
                        <div class="main-comment-container">

                            <div>
                                <img src="./pics/profile-pic.png" alt="post img" class="pull-left img-responsive img-thumbnail ">
                                <p class="main-comment-date pull-right"> {{comments.result.date}}</p>
                                <h3 class=" main-comment-author media-heading">{{comments.result.author}}</h3>
                                <article>
                                    <p>
                                        {{comments.result.text}} {{!-- Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make
                                        a type specimen book. It has --}}

                                    </p>
                                </article>
                                <a class="btn btn-default btn-sm pull-right main-comment-btn" href="#/blog">Read More</a>
                            </div>
                            {{!-- {{/comments.result}} --}}
                        </div>
                        <div class="row">
                            <div class="col-md-10 col-sm-10 col-xs-10 pull-right">
                                <div class="main-comment-container">
                                    <div>

                                        <img src="./pics/profile-pic.png" alt="post img" class="pull-left img-responsive img-thumbnail ">
                                        <p class="main-comment-date pull-right"> {{post.result.[0].comments.[0].date}}</p>
                                        {{!-- {{blogArticles.result.[0].category}} --}}
                                        <h3 class=" main-comment-author media-heading">{{post.result.[0].comments.[0].author}}</h3>
                                        <article>
                                            <p>
                                               {{post.result.[0].comments.[0].text}}

                                            </p>
                                        </article>
                                        <a class="btn btn-default btn-sm pull-right main-comment-btn" href="#/blog">Read More</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class=" main-content-left main-comment ">
                            <h1>Leave a Reply</h1>
                            <div class="row">
                                <form role="form" id="contact-form" class="contact-form ">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="text" class="form-control leave-comment" name="Name" autocomplete="off" id="Name" placeholder="Name">
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="email" class="form-control leave-comment" name="email" autocomplete="off" id="email" placeholder="E-mail">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <textarea class="form-control textarea leave-comment" rows="3" name="Message" id="Message" placeholder="Message"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-default btn-sm pull-right main-comment-btn">Read More</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 pull-right pull-content-right ">
                <div class="main-content-right ">
                    <div class="main-content-right-container ">
                        <span>Latest Posts</span> {{#recentPosts.result}}
                        <li>{{title}}</li>
                        {{/recentPosts.result}}
                    </div>
                </div>
                <div class="main-content-right ">
                    <div class="main-content-right-container ">
                        <span>Latest Posts</span>

                        <li>How to get to Machu Picchu</li>
                        <li>Handling the heights </li>
